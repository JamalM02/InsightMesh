{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["esnext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@insightmesh/grpc-account/*": ["packages/grpc-account/src/*"],
      "@insightmesh/grpc-events/*": ["packages/grpc-events/src/*"],
      "@insightmesh/node-common/*": ["packages/node-common/src/*"]
    }
  }
}
