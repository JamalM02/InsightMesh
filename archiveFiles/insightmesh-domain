sudo apt-get update && sudo apt-get install -y apache2-utils
sudo htpasswd -c /etc/nginx/.htpasswd admin   # choose a strong password
sudo nginx -t && sudo systemctl reload nginx


sudo apt update
sudo apt install -y certbot python3-certbot-nginx

sudo certbot --nginx -d insightmesh.site -d www.insightmesh.site

systemctl status certbot.timer


/etc/nginx/sites-available/insightmesh

# Redirect HTTP to HTTPS
server {
    listen 80;
    server_name insightmesh.site www.insightmesh.site;
    return 301 https://$host$request_uri;
}

# HTTPS Server
server {
    listen 443 ssl;
    server_name insightmesh.site www.insightmesh.site;

    ssl_certificate /etc/ssl/insightmesh/insightmesh.pem;
    ssl_certificate_key /etc/ssl/insightmesh/insightmesh.key;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;

    # Web App on Port 5000 (React/Next app or similar)
    location / {
        proxy_pass http://localhost:5000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }

    # Metabase Dashboard (on port 3000)
    # (auth ON) normal Metabase UI
    location /metabase/ {
        auth_basic "Restricted";
        auth_basic_user_file /etc/nginx/.htpasswd;

        proxy_pass http://localhost:3000/;
        proxy_http_version 1.1;
        proxy_set_header Host              $host;
        proxy_set_header X-Real-IP         $remote_addr;
        proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Upgrade           $http_upgrade;
        proxy_set_header Connection        "upgrade";
        proxy_redirect off;
        rewrite ^/metabase(/.*)$ $1 break;
    }

    # no-auth carve-out for public links
    location ^~ /metabase/public/ {
        auth_basic off;
        proxy_pass http://localhost:3000/;
        proxy_http_version 1.1;
        proxy_set_header Host              $host;
        proxy_set_header X-Real-IP         $remote_addr;
        proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_redirect off;
    }

    # API Gateway on Port 5500
    location /api-gateway/ {
        proxy_pass http://localhost:5500/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        rewrite ^/api-gateway(/.*)$ $1 break;
    }

    # clickhouse on Port 8123
    location /clickhouse/ {
        # NGINX gate
        auth_basic "Restricted";
        auth_basic_user_file /etc/nginx/.htpasswd;

        # pass Basic Auth through to ClickHouse
        proxy_set_header Authorization $http_authorization;

        proxy_pass http://localhost:8123/;
        proxy_http_version 1.1;
        proxy_set_header Host              $host;
        proxy_set_header X-Real-IP         $remote_addr;
        proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
