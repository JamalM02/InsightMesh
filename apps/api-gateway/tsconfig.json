{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2024",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types",
      "./types.d.ts"
    ],
    "paths": {
      "@libs/*": ["src/libs/*"],
      "@controllers/*": ["src/controllers/*"],
      "@middleware": ["src/middleware"],
      "@routes/*": ["src/routes/*"],
      "@insightmesh/node-common": ["../../packages/node-common/src"],
      "@insightmesh/grpc-account": ["../../packages/grpc-account/client/src"],
      "@insightmesh/grpc-events": ["../../packages/grpc-events/client/src"]
    }
  },
  "include": ["src/**/*",
    "types.d.ts"
  ],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "files": true
  }
}
